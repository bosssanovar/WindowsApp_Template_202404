<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--カラーパレット定義-->
    <Color x:Key="PrimaryBackgroundColor">#202020</Color>
    <SolidColorBrush x:Key="PrimaryBackgroundBlush" Color="{StaticResource PrimaryBackgroundColor}"/>

    <Color x:Key="SecondaryBackgroundColor">#303030</Color>
    <SolidColorBrush x:Key="SecondaryBackgroundBlush" Color="{StaticResource SecondaryBackgroundColor}"/>


    <!--部品カラー定義-->
    <Color x:Key="BlurOnColor">#E0000000</Color>
    <SolidColorBrush x:Key="BlurOnBrush" Color="{StaticResource BlurOnColor}"/>

    <Color x:Key="BlurOffColor">#00000000</Color>
    <SolidColorBrush x:Key="BlurOffBrush" Color="{StaticResource BlurOffColor}"/>
    
</ResourceDictionary>